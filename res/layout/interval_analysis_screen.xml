<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/IntervalAnalysisScreen_ScrollView"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/IntervalAnalysisScreen_Layout" android:orientation="vertical"
				android:layout_width="fill_parent" android:layout_height="fill_parent">
		
		<LinearLayout android:id="@+id/IntervalAnalysisScreen_StartLayout" android:weightSum="1.0"
			android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="FROM:" android:id="@+id/IntervalAnalysisScreen_StartLabel" 
				android:layout_weight="0.1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="20sp"></TextView>
			<Button android:text="start time goes here" android:id="@+id/IntervalAnalysisScreen_StartTimeButton"
				android:layout_weight="0.45" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="start date goes here" android:id="@+id/IntervalAnalysisScreen_StartDateButton"
				android:layout_weight="0.45" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
		
		<LinearLayout android:id="@+id/IntervalAnalysisScreen_EndLayout" android:weightSum="1.0"
			android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="TO:" android:id="@+id/IntervalAnalysisScreen_EndLabel" 
				android:layout_weight="0.1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="20sp"></TextView>
			<Button android:text="end time goes here" android:id="@+id/IntervalAnalysisScreen_EndTimeButton"
				android:layout_weight="0.45" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
			<Button android:text="end date goes here" android:id="@+id/IntervalAnalysisScreen_EndDateButton"
				android:layout_weight="0.45" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
		
		<LinearLayout android:id="@+id/IntervalAnalysisScreen_Spacer1"
			android:layout_width="fill_parent" android:layout_height="8dip"></LinearLayout>
		
		<TextView android:text="analysis goes here"
				android:id="@+id/IntervalAnalysisScreen_AnalysisText" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="16sp"></TextView>
	</LinearLayout>
</ScrollView>